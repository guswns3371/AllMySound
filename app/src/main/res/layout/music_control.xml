<?xml version="1.0" encoding="utf-8"?>

<eightbitlab.com.blurview.BlurView
        xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/blurryView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:blurOverlayColor="@color/colorOverlay">
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/transparent"
            android:id="@+id/music_control" android:paddingStart="5dp" android:paddingEnd="5dp">
        <FrameLayout
                android:background="@color/transparent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@color/transparent"
                    android:id="@+id/ctr_cover_cv"
                    app:cardCornerRadius="7dp"
                    android:layout_gravity="center_vertical">
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/round_img"
                        app:srcCompat="@drawable/song_500"
                        android:id="@+id/ctr_cover"/>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                    android:background="@color/transparent"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="65dp" android:layout_weight="1" android:id="@+id/music_control_two">
                <Space
                        android:layout_width="65dp"
                        android:layout_height="65dp"/>
                <TextView
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:singleLine="true"
                        android:scrollHorizontally="true"
                        android:ellipsize="marquee"
                        android:marqueeRepeatLimit="marquee_forever"

                        android:text="재생중인 음악이 없습니다"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/ctr_name" android:layout_weight="1"
                        android:layout_gravity="center_vertical" android:padding="15dp" android:textSize="16sp"
                        tools:visibility="visible" android:visibility="visible"
                        android:textColor="#000000"/>
                <ImageView
                        android:layout_width="50dp"
                        android:layout_height="65dp" app:srcCompat="@drawable/play" android:id="@+id/ctr_play"
                        android:layout_weight="0" android:scaleType="fitCenter" android:padding="15dp"
                        tools:visibility="visible"
                        android:visibility="visible"/>
                <ImageView
                        android:layout_width="55dp"
                        android:layout_height="65dp" app:srcCompat="@drawable/play_next" android:id="@+id/ctr_next"
                        android:layout_weight="0" android:scaleType="fitCenter" android:padding="15dp"
                        tools:visibility="visible"
                        android:visibility="visible"/>
            </LinearLayout>
        </FrameLayout>

    </FrameLayout>
        </eightbitlab.com.blurview.BlurView>